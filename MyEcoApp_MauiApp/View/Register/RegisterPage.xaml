<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyEcoApp_MauiApp.View.Register.RegisterPage"
             xmlns:viewModels="clr-namespace:MyEcoApp_MauiApp.ViewModel.Register"
             Title="RegisterPage">

    <ContentPage.BindingContext>
        <viewModels:RegisterPageViewModel />
    </ContentPage.BindingContext>
    
    <VerticalStackLayout>
        <Label 
            Text="Register Now"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry Placeholder="Enter email..."
            Text="{Binding Email}"
            x:Name="EmailEntry"
            ReturnCommand="{Binding CloseKeyboardCommand}"
            MaxLength="34"
            />

        <Entry Placeholder="Password" 
               Text="{Binding Password}"
               IsPassword="True" 
               x:Name="passwordEntry" 
               />

        <Button x:Name="SubmitScoreBtn" Text="{Binding SubmitBtn}" Margin="0,20,0,0" Command="{Binding PostRegister}" />

    </VerticalStackLayout>
</ContentPage>